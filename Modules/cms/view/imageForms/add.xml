<form action="cms/photos/" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="site_location" value="" class="tss-form-data-fill"/>
    <div class="row">
        <h2>Update Photo</h2>
        <div class="u-full-width">
            <label for="photo_file">Photo</label>
            <input type="file" name="photo_file" class="u-full-width" />
        </div>
    </div>
    <div class="row">
        <button class="c-btn c-btn--primary" type="submit">Add Photo</button>
    </div>
</form>
